<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lid closes by rotating back -->
    <rotate
        android:duration="150"
        android:fromDegrees="-45"
        android:toDegrees="0"
        android:pivotX="20%"
        android:pivotY="80%"
        android:fillAfter="true" />
</set>